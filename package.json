{
  "name": "ts-elec-react",
  "author": "Kevin Hong",
  "description": "test description",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "./public/electron.js",
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/nedb": "^1.8.11",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "concurrently": "^5.3.0",
    "electron-is-dev": "^1.2.0",
    "history": "^5.0.0",
    "nedb-promises": "^4.1.0",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^6.0.0-beta.0",
    "react-scripts": "4.0.0",
    "typescript": "^4.0.3",
    "wait-on": "^5.2.0",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1"
  },
  "scripts": {
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "compileElectronTSDev": "tsc scripts/* --outDir public/",
    "startR": "react-scripts start",
    "buildR": "NODE_ENV=production react-scripts build",
    "startE": "NODE_ENV=development nodemon --watch ./public/electron/**/* --watch . --exec 'electron .'",
    "buildE": "electron-builder -c",
    "build": "NODE_ENV=production npm run buildR && npm run buildE"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.electron.khongweeklyplanner",
    "productName": "KHong Weekly Planner",
    "files": [
      "build/**/*",
      "build/electron_files/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      "database/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "directories": {
      "buildResources": "assets"
    }
  }
}
